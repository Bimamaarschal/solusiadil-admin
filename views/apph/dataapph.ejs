<!doctype html>
<html class="no-js" lang="zxx">

<%- include('../partials/head') %>

	<body>

		<%- include('../partials/header', { activePage: 'dataapph' }) %>
			<section class="news-single section" style="padding-top: 5px;">
				<div class="container">
					<div class="row">
						<div class="col-lg-12 col-2">
							<div class="row">
								<div class="col-12">
									<div class="comments-form d-flex justify-content-between align-items-center">
										<h1 style="font-size: 18px;"><i class="fa-solid fa-compass"></i> Pengelolaan Data Aparat atau Profesi Penegak Hukum</h1>
										<div class="get-quote">
											<a href="tulisapph" class="btn">APPH Baru</a>
										</div>
									</div>
								</div>
							</div>
						</div>

						<div class="col-lg-8 col-6">
							<div class="row">
								<div class="col-12">
									<div class="comments-form">
										<h1 style="font-size: 18px; padding-bottom: 25px;"> Data Seluruh apph</h1>
										<% apphData.sort((a, b)=> new Date(a.tanggal) - new Date(b.tanggal));
											if (apphData.length > 0) {
											%>
											<table>
												<thead>
													<tr>
														<th>ID</th>
														<th>Nama</th>
														<th>Pekerjaan</th>
														<th>Aksi</th>
													</tr>
												</thead>
												<tbody>
													<% apphData.forEach(apph=> { %>
														<tr>
															<td>
																<%= apph.id_apph %>
															</td>
															<td>
																<%= apph.nama_apph %>
															</td>
															<td>
																<%= apph.pekerjaan %>
															</td>
															<td>
																<form
																	action="<%= apph.nik ? '/bacaapph?id_apph=' + apph.id_apph : '#' %>"
																	method="get">
																	<input type="hidden" name="id_apph" value="<%= apph.id_apph %>">
																	<% if (apph.nik) { %>
																		<button type="submit" class="btn-lihat">
																			Lihat Data
																		</button>
																	<% } %>
																</form>
															</td>
														</tr>
														<% }); %>
												</tbody>
											</table>
											<% } else { %>
												<p>Tidak ada data apph yang tersedia.</p>
												<% } %>
									</div>
								</div>
							</div>
						</div>
						<div class="col-lg-4 col-12">
							<div class="main-sidebar">
								<div class="single-widget recent-post">
									<h3 class="title" style="padding-bottom: 0px; margin-bottom: 0px;">apph
										Tersedia</h3>
									<br>
									<div class="content">
										<ul class="comment" style="font-size: 12px;">
											<% const totalapph2=apphData.length; const
												jumlahapphProses1=apphData.filter(apph=> apph.status ===
												'Diproses').length;
												const jumlahapphSelesai1 = apphData.filter(apph => apph.status
												===
												'Diterima').length;
												const jumlahapphGagal1 = apphData.filter(apph => apph.status ===
												'Gagal').length;
												%>
												<li><i class="fa-solid fa-address-card" aria-hidden="true"></i>
													Jumlah Seluruh apph: <i
														style="background-color:darkgrey ; padding: 5px; color:black ; border-radius: 100px;">
														<%= totalapph2 %>
													</i>
												</li>
										</ul>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</section>

			<%- include('../partials/footer') %>

				<%- include('../partials/js') %>
	</body>

</html>