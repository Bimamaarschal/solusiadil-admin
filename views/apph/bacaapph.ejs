					<script>
						function getRandomInt(min, max) {
							min = Math.ceil(min);
							max = Math.floor(max);
							return Math.floor(Math.random() * (max - min + 1)) + min;
						}

						window.onload = function () {
							var randomNumber = getRandomInt(1, 10);
							var imgElement = document.getElementById("randomImage");
							imgElement.src = "apph/" + randomNumber + ".png";
						}
					</script>
					<script>
						function convertHtmlToTextWithFormatting(html) {
							const parser = new DOMParser();
							const doc = parser.parseFromString(html, 'text/html');
							return doc.body.innerHTML;
						}
						const htmlContent = `<%- apph.isi %>`;
						const formattedTextElement = document.getElementById('formatted-text');
						formattedTextElement.innerHTML = convertHtmlToTextWithFormatting(htmlContent);
					</script>
					<script>
						function confirmDelete(id) {
							if (confirm("Apakah Anda yakin ingin menghapus ID " + id + "?")) {
								window.location.href = "/hapusapph?id=" + id;
							}
						}
						</script>
