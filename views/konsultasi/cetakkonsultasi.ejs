            </tr>
            <tr>
                <td>undangundang</td>
                <td>
                    <%= konsultasi.undangundang %>
                </td>
            </tr>
            <tr>
                <td>wilayahhukum</td>
                <td>
                    <%= konsultasi.wilayahhukum %>
                </td>
            </tr>
        </table>
    </div>
</body>
<script>
    window.onload = function () {
        window.print();
        setTimeout(function () {
            window.location.href = "/konsultasi";
        }, 3000);
    };
</script>

</html>