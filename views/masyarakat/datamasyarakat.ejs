<!doctype html>
<html class="no-js" lang="zxx">

<%- include('../partials/head') %>

	<body>

		<%- include('../partials/header', { activePage: 'datamasyarakat' }) %>
			<section class="news-single section" style="padding-top: 5px;">
				<div class="container">
					<div class="row">
						<div class="col-lg-12 col-2">
							<div class="row">
								<div class="col-12">
									<div class="comments-form d-flex justify-content-between align-items-center">
										<h1 style="font-size: 18px;"><i class="fa-solid fa-compass"></i> Masyarakat</h1>
									</div>
								</div>
							</div>
						</div>

						<div class="col-lg-8 col-6">
							<div class="row">
								<div class="col-12">
									<div class="comments-form">
										<h1 style="font-size: 18px; padding-bottom: 25px;"> Data Seluruh Masyarakat</h1>
										<% masyarakatData.sort((a, b)=> new Date(a.tanggal) - new Date(b.tanggal));
											if (masyarakatData.length > 0) {
											%>
											<table>
												<thead>
													<tr>
														<th>ID</th>
														<th>Nama</th>
														<th>Aksi</th>
													</tr>
												</thead>
												<tbody>
													<% masyarakatData.forEach(masyarakat=> { %>
														<tr>
															<td>
																<%= masyarakat.id_masyarakat %>
															</td>
															<td>
																<%= masyarakat.nama %>
															</td>
															<td>
																<form
																	action="<%= masyarakat.nik ? '/bacamasyarakat?id_masyarakat=' + masyarakat.id_masyarakat : '#' %>"
																	method="get">
																	<input type="hidden" name="id_masyarakat" value="<%= masyarakat.id_masyarakat %>">
																	<% if (masyarakat.nik) { %>
																		<button type="submit" class="btn-lihat">
																			Lihat Data
																		</button>
																	<% } %>
																</form>
															</td>
														</tr>
														<% }); %>
												</tbody>
											</table>
											<% } else { %>
												<p>Tidak ada data masyarakat yang tersedia.</p>
												<% } %>
									</div>
								</div>
							</div>
						</div>
						<div class="col-lg-4 col-12">
							<div class="main-sidebar">
								<div class="single-widget recent-post">
									<h3 class="title" style="padding-bottom: 0px; margin-bottom: 0px;">masyarakat
										Tersedia</h3>
									<br>
									<div class="content">
										<ul class="comment" style="font-size: 12px;">
											<% const totalmasyarakat2=masyarakatData.length; const
												jumlahmasyarakatProses1=masyarakatData.filter(masyarakat=> masyarakat.status ===
												'Diproses').length;
												const jumlahmasyarakatSelesai1 = masyarakatData.filter(masyarakat => masyarakat.status
												===
												'Diterima').length;
												const jumlahmasyarakatGagal1 = masyarakatData.filter(masyarakat => masyarakat.status ===
												'Gagal').length;
												%>
												<li><i class="fa-solid fa-address-card" aria-hidden="true"></i>
													Jumlah Seluruh masyarakat: <i
														style="background-color:darkgrey ; padding: 5px; color:black ; border-radius: 100px;">
														<%= totalmasyarakat2 %>
													</i>
												</li>
										</ul>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</section>

			<%- include('../partials/footer') %>

				<%- include('../partials/js') %>
	</body>

</html>