<!doctype html>
<html class="no-js" lang="zxx">

<%- include('../partials/head') %>

	<body>

		<%- include('../partials/header', { activePage: 'datamasyarakat' }) %>
			<section class="news-single section" style="padding-top: 5px;">
				<div class="container">
					<div class="row">
						<div class="col-lg-12 col-2">
							<div class="row">
								<div class="col-12">
									<div class="comments-form d-flex justify-content-between align-items-center">
										<h1 style="font-size: 18px;"><i class="fa-solid fa-compass"></i> Data masyarakat
											<%= masyarakat.id_masyarakat %>
										</h1>
										<div class="get-quote">
											<a href="/editmasyarakat?id=<%= masyarakat.id_masyarakat %>"
												class="btn">Edit</a>
											<a href="#"
												onclick="confirmDelete('<%= masyarakat.id_masyarakat %>'); return false;"
												class="btn">Hapus</a>

										</div>
									</div>
								</div>
							</div>
						</div>
						<div class="col-lg-12 col-12">
							<div class="row">
								<div class="col-12">
									<div class="single-main">
										<div class="meta" style="padding: 0px; padding-bottom: 10px;">
											<div class="meta-left" style="padding: 0px;">
												<span class="date" style="padding-left: 15px;">
													Nama : <%= masyarakat.nama %>
												</span>
											</div>
										</div>
									
										<div class="meta" style="padding: 0px; padding-bottom: 10px;">
											<div class="meta-left" style="padding: 0px;">
												<span class="date" style="padding-left: 15px;">
													NIK : <%= masyarakat.nik %>
												</span>
											</div>
										</div>
									
										<div class="meta" style="padding: 0px; padding-bottom: 10px;">
											<div class="meta-left" style="padding: 0px;">
												<span class="date" style="padding-left: 15px;">
													ID Masyarakat : <%= masyarakat.id_masyarakat %>
												</span>
											</div>
										</div>
									
										<div class="meta" style="padding: 0px; padding-bottom: 10px;">
											<div class="meta-left" style="padding: 0px;">
												<span class="date" style="padding-left: 15px;">
													Jenis Kelamin : <%= masyarakat.jenis_kelamin %>
												</span>
											</div>
										</div>
									
										<div class="meta" style="padding: 0px; padding-bottom: 10px;">
											<div class="meta-left" style="padding: 0px;">
												<span class="date" style="padding-left: 15px;">
													Tanggal Lahir : <%= masyarakat.tgl_lahir %>
												</span>
											</div>
										</div>
									
										<div class="meta" style="padding: 0px; padding-bottom: 10px;">
											<div class="meta-left" style="padding: 0px;">
												<span class="date" style="padding-left: 15px;">
													No. Telepon : <%= masyarakat.no_tlp %>
												</span>
											</div>
										</div>
									
										<div class="meta" style="padding: 0px; padding-bottom: 10px;">
											<div class="meta-left" style="padding: 0px;">
												<span class="date" style="padding-left: 15px;">
													Email : <%= masyarakat.email %>
												</span>
											</div>
										</div>
									
										<div class="meta" style="padding: 0px; padding-bottom: 10px;">
											<div class="meta-left" style="padding: 0px;">
												<span class="date" style="padding-left: 15px;">
													Alamat : <%= masyarakat.alamat %>
												</span>
											</div>
										</div>

										<div class="meta" style="padding: 0px; padding-bottom: 10px;">
											<div class="meta-left" style="padding: 0px;">
												<span class="date" style="padding-left: 15px;">
													Password : <%= masyarakat.password %>
												</span>
											</div>
										</div>
									</div>
									
								</div>
							</div>
						</div>


					</div>

				</div>
			</section>

			<%- include('../partials/footer') %>

				<%- include('../partials/js') %>
					<script>
						function getRandomInt(min, max) {
							min = Math.ceil(min);
							max = Math.floor(max);
							return Math.floor(Math.random() * (max - min + 1)) + min;
						}

						window.onload = function () {
							var randomNumber = getRandomInt(1, 10);
							var imgElement = document.getElementById("randomImage");
							imgElement.src = "masyarakat/" + randomNumber + ".png";
						}
					</script>
					<script>
						function convertHtmlToTextWithFormatting(html) {
							const parser = new DOMParser();
							const doc = parser.parseFromString(html, 'text/html');
							return doc.body.innerHTML;
						}
						const htmlContent = `<%- masyarakat.isi %>`;
						const formattedTextElement = document.getElementById('formatted-text');
						formattedTextElement.innerHTML = convertHtmlToTextWithFormatting(htmlContent);
					</script>
					<script>
						function confirmDelete(id) {
							if (confirm("Apakah Anda yakin ingin menghapus ID " + id + "?")) {
								window.location.href = "/hapusmasyarakat?id=" + id;
							}
						}
					</script>
	</body>

</html>